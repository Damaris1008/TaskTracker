<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4">
            <div class="card-header form-task-header">
                <h3>Registrarse</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Correo electrónico" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Contraseña" value="{{confirm_password}}">
                    </div>
                    <div class="form-group"> 
                        <button type="submit" class="btn btn-dark btn-block">
                            Registrarse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>